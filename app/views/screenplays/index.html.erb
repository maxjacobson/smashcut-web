<p id="notice"><%= notice %></p>

<h1>Listing Screenplays</h1>

<table>
  <thead>
    <tr>
      <th>Fountain</th>
      <th>Secure</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @screenplays.each do |screenplay| %>
      <tr>
        <td><%= screenplay.fountain %></td>
        <td><%= screenplay.secure_id %></td>
        <td><%= screenplay.title %></td>
        <td><%= link_to 'Show', screenplay %></td>
        <td><%= link_to 'Edit', edit_screenplay_path(screenplay) %></td>
        <td><%= link_to 'Destroy', screenplay, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

